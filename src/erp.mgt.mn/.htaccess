<IfModule mod_rewrite.c>
  RewriteEngine On

  # 1) Proxy Socket.IO WebSocket upgrades
  RewriteCond %{HTTP:Upgrade} websocket [NC]
  RewriteCond %{HTTP:Connection} upgrade [NC]
  RewriteRule ^/?socket\.io(/.*)?$ ws://127.0.0.1:3002/socket.io$1 [P,L]

  # 2) Proxy Socket.IO longâ€‘polling and other HTTP calls
  RewriteRule ^/?socket\.io(/.*)?$ http://127.0.0.1:3002/socket.io$1 [P,L]

  # 3) Proxy API calls to the backend
  RewriteRule ^api/(.*)$ http://127.0.0.1:3002/api/$1 [P,L]

  # 4) Serve files directly if they exist (for /assets, /favicon.ico, etc.)
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 5) Otherwise serve the SPA shell
  RewriteRule . /index.html [L]
</IfModule>
