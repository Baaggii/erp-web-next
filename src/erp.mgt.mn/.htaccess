<IfModule mod_rewrite.c>
  RewriteEngine On

  # 1) Proxy Socket.IO WebSocket upgrades (IMPORTANT FIX)
  RewriteCond %{HTTP:Upgrade} websocket [NC]
  RewriteCond %{HTTP:Connection} upgrade [NC]
  RewriteRule ^api/socket\.io(/.*)?$ ws://127.0.0.1:3002/api/socket.io$1 [P,L]

  # 2) Proxy Socket.IO long-polling and other HTTP calls
  RewriteRule ^api/socket\.io(/.*)?$ http://127.0.0.1:3002/api/socket.io$1 [P,L]

  # 3) Proxy other API calls
  RewriteRule ^api/(.*)$ http://127.0.0.1:3002/api/$1 [P,L]

  # 4) Serve static files if they exist
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 5) SPA fallback
  RewriteRule . /index.html [L]
</IfModule>
