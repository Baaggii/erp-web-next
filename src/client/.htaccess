<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /erp/

  # 1) Everything under /erp/api/ gets reverse-proxied to your Node server on localhost:3002
  #    We strip the /erp prefix and forward /api/... to http://127.0.0.1:3002/api/...
  RewriteCond %{REQUEST_URI} ^/erp/api/
  RewriteRule ^api/(.*)$ http://127.0.0.1:3002/api/$1 [P,L]

  # 2) If the request matches a real file (css/js/images), serve it directly
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]

  # 3) Otherwise fall back to index.html for your SPA routing
  RewriteRule . index.html [L]
</IfModule>
