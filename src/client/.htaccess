# File: public_html/erp/.htaccess
RewriteEngine On

# If request starts with /erp/api, forward to Node (Passenger/mod_passenger):
# (Or remove entirely if your host auto-passes Node apps)
# PassengerEnabled on

# Otherwise serve static files and fall back to index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^ /erp/index.html [L]
