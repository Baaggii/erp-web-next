# Turn off PHP/Static fallback â€“ everything goes to our Node app
RewriteEngine On
RewriteBase /erp/

# If the file or directory exists on disk, serve it
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Otherwise proxy everything to port 3002
# (Assumes mod_proxy_http is already enabled by the host)
RewriteRule ^(.*)$ http://127.0.0.1:3002/erp/$1 [P,L]
