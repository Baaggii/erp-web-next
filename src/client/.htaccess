<IfModule mod_rewrite.c>
  RewriteEngine On

  # 1) Donâ€™t rewrite any /erp/api/* requests
  RewriteRule ^api/ - [L]

  # 2) If the file or folder actually exists, serve it
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 3) Everything else in /erp goes to index.html
  RewriteRule . index.html [L]
</IfModule>
