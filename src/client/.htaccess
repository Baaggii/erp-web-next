<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /erp/

  # Proxy only the API (requires mod_proxy & mod_proxy_http)
  RewriteCond %{REQUEST_URI} ^/erp/api/
  RewriteRule ^api/(.*)$ http://127.0.0.1:3002/erp/api/$1 [P,L]

  # If the file exists (JS/CSS/assets), serve it
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]

  # Otherwise, serve index.html (SPA)
  RewriteRule . index.html [L]
</IfModule>
