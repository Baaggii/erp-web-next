# File: public_html/erp/.htaccess
Options -MultiViews
RewriteEngine On

# 1) If the request is for a real file or directory, serve it:
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 2) Otherwise, fall back to index.html (SPA)
RewriteRule .* /erp/index.html [L]
