<IfModule mod_rewrite.c>
  RewriteEngine On

  # Proxy API calls to the Express backend
  RewriteRule ^api/(.*)$ http://127.0.0.1:3002/api/$1 [P,L]

  # Allow Apache to serve existing files and directories (e.g. /assets)
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
</IfModule>
