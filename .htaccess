# Enable rewrite engine
RewriteEngine On

# Redirect root to corporate landing if needed
# RewriteRule ^$ /index.html [L]

# Proxy /erp to Node.js backend on port 3002
RewriteRule ^erp(/.*)?$ http://127.0.0.1:3002/erp$1 [P,L]

# Proxy API calls to the same backend
RewriteRule ^api(/.*)?$ http://127.0.0.1:3002/api$1 [P,L]

# Fallback for SPA routes if needed
# RewriteRule ^erp/(.*)$ /erp/index.html [L]